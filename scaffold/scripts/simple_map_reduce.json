[
    {
        "name": "mapper",
        "exec" {
            "path": "file://python:python" }
        "devices": [
            { "name": "stdin",
              "path": "swift://./scripts/simple_mapper.py" },
            { "name": "input",
              "path": "swift://./data/*.txt" },
            { "name": "python" }]
        "connect": "reducer"
    },
    {
        "name": "reducer",
        "exec": { "path": "file://python:python" },
        "devices": [
            { "name": "stdin",
              "path": "swift://./scripts/simple_reducer.py" },
            { "name": "stdout" },
            { "name": "python" }
        ]
    }
]
